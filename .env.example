# ================================
# SUPABASE CONFIGURATION
# ================================
SUPABASE_URL=your-project-url.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# JWT CONFIGURATION
# ================================
# Supabase handles JWT signing, but you may need the secret for verification
JWT_SECRET=your-jwt-secret-from-supabase
JWT_ALGORITHM=HS256

# ================================
# APPLICATION SETTINGS
# ================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1

# ================================
# FEATURE FLAGS
# ================================
FEATURE_SV_PAY_ENABLED=false
FEATURE_SV_ORBIT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# ================================
# CORS SETTINGS
# ================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006
# Add your mobile app schemes and production domains

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ================================
# EMAIL VALIDATION
# ================================
# Comma-separated list of allowed university email domains
ALLOWED_EMAIL_DOMAINS=student.university.edu,edu.university.ae

# ================================
# RAILWAY DEPLOYMENT
# ================================
PORT=8000
RAILWAY_ENVIRONMENT=production

# ================================
# EXTERNAL SERVICES (if needed)
# ================================
# Add any third-party API keys here
# EXAMPLE_API_KEY=your-api-key

# ================================
# SV ORBIT CONFIGURATION
# ================================
# LLM provider settings (placeholder)
# OPENAI_API_KEY=your-openai-key
# ORBIT_MAX_RESULTS=10

# ================================
# SV PAY CONFIGURATION (disabled)
# ================================
# Payment provider settings (placeholder)
# STRIPE_SECRET_KEY=your-stripe-key
# STRIPE_WEBHOOK_SECRET=your-webhook-secret
